{% if netdata_backend == True %}

[API_KEY]
    enabled = yes
    default history = 3600
    default memory mode = save
    health enabled by default = auto
    allow from = *

[stream]
    enabled = no
    destination = netdata_stream_host:netdata_stream_port
    api key = {{netdata_stream_api_key}}

{% else %}
{% if netdata_stream %}

[stream]
    enabled = yes
    destination = netdata_stream_host:netdata_stream_port
    api key = {{netdata_stream_api_key}}

{% endif %}
{% endif %}


